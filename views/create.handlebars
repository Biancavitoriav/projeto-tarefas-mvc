  <label>Título:</label><br>
  <input type="text" name="title" placeholder="O que precisa ser feito?" required/><br>
  <label>Descrição:</label><br>
  <input type="text" name="description" placeholder="Algum detalhe extra?" /><br><br>
  <label>Prioridade:</label>
  <select name="prioridade" id="priority">
    <option value="">Escolha o nível de prioridade</option>
    <option value="{{task.priority}}">Baixa</option>
    <option value="{{task.priority}}">Média</option>
    <option value="{{task.priority}}">Alta</option>
  </select>
